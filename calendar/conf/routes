# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                       Application.index
GET		/user/{nickname}						Application.showCalendars
GET		/user/{nickname}/calendar/{id}			Application.showCalendar
GET		/users									Application.showUsers

GET 	/profile/contacts 						Contacts.index
GET 	/profile/contacts/add 					Contacts.addContacts
GET		/profile/contacts/add/{contactId}		Contacts.addContact
GET	 	/profile/contacts/remove/{contactId} 	Contacts.removeContact

# Ignore favicon requests
GET     /favicon.ico                            404

# Map static resources from the /app/public folder to the /public path
GET     /public/                                staticDir:public

# Catch all
*       /{controller}/{action}                  {controller}.{action}

# Import Secure routes
*      /                module:secure
