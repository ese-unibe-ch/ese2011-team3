# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                       										Calendars.index
GET		/calendars/{currentDate}/{calendarId}/follow/{eventId}							Calendars.copyEvent
GET		/calendars/{currentDate}/{calendarId}/edit/{eventId}							Calendars.editEvent
GET		/calendars/{currentDate}/{calendarId}/delete/{eventId}							Calendars.deleteEvent
POST	/calendars/{currentDate}/{calendarId}/save										Calendars.saveEvent
GET		/calendars/{currentDate}/{calendarId}/add										Calendars.addEvent
GET		/calendars/{currentDate}/{calendarId}/nextMonth									Calendars.viewNextMonth
GET		/calendars/{currentDate}/{calendarId}/prevMonth									Calendars.viewPrevMonth
GET		/calendars/{currentDate}/{calendarId}											Calendars.viewCalendar


GET		/profile								Profile.index
GET		/profile/edit							Profile.edit
POST	/profile/save							Profile.save

GET 	/profile/contacts 						Contacts.index
GET 	/profile/contacts/add 					Contacts.addContacts
GET		/profile/contacts/add/{contactId}		Contacts.addContact
GET	 	/profile/contacts/remove/{contactId} 	Contacts.removeContact


POST    /events/{calendarId}/add				Events.createEvent  
GET	    /events/{nickname}/index				Events.index 
GET     /events/{eventId}/{calendarId}/edit		Events.editEvent
POST    /events/{eventId}/update				Events.updateEvent
GET     /events/{eventId}/{calendarId}/remove	Events.removeEvent
GET		/events/follow/{eventId}				Events.followEvent

# Ignore favicon requests
GET     /favicon.ico                            404

# Map static resources from the /app/public folder to the /public path
GET     /public/                                staticDir:public

# Catch all
*       /{controller}/{action}                  {controller}.{action}

# Import Secure routes
*      /                module:secure
