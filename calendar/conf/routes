# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                       Application.index
GET		/user/{nickname}						Calendars.showCalendars
GET		/user/{nickname}/calendar/{id}			Calendars.showCalendar
GET		/user/{nickname}/calendar/{id}/date/{day}	Calendars.showDate
GET		/users									Application.showUsers

GET		/profile								Profile.index
GET		/profile/edit							Profile.edit
POST	/profile/save							Profile.save

GET 	/profile/contacts 						Contacts.index
GET 	/profile/contacts/add 					Contacts.addContacts
GET		/profile/contacts/add/{contactId}		Contacts.addContact
GET	 	/profile/contacts/remove/{contactId} 	Contacts.removeContact


POST    /events/{calendarId}/add				Events.createEvent  
GET	    /events/{nickname}/index				Events.index 
GET     /calendar/{calendarId}/addEvent			Events.addEvent
GET     /events/{eventId}/edit					Events.editEvent
POST    /events/{eventId}/update				Events.updateEvent
GET     /events/{eventId}/remove				Events.removeEvent

# Ignore favicon requests
GET     /favicon.ico                            404

# Map static resources from the /app/public folder to the /public path
GET     /public/                                staticDir:public

# Catch all
*       /{controller}/{action}                  {controller}.{action}

# Import Secure routes
*      /                module:secure
